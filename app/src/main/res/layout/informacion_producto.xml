<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvid"
        android:layout_width="95dp"
        android:layout_height="41dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="ID"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvidn"
        android:layout_width="217dp"
        android:layout_height="41dp"

        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvid"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvproducto"
        android:layout_width="96dp"
        android:layout_height="41dp"
        android:layout_marginLeft="16dp"
        android:text="Producto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvid" />

    <TextView
        android:id="@+id/tvcantidadD"
        android:layout_width="96dp"
        android:layout_height="41dp"
        android:layout_marginLeft="16dp"
        android:text="Cantidad Disponible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvproducto" />

    <TextView
        android:id="@+id/tvprecio"
        android:layout_width="96dp"
        android:layout_height="41dp"
        android:layout_marginLeft="16dp"
        android:text="Precio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvcantidadD" />

    <TextView
        android:id="@+id/tvcantidadP"
        android:layout_width="96dp"
        android:layout_height="41dp"
        android:layout_marginLeft="16dp"
        android:text="Cantidad de Pedido"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvprecio" />

    <TextView
        android:id="@+id/tvproducton"
        android:layout_width="215dp"
        android:layout_height="41dp"

        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvproducto"
        app:layout_constraintTop_toBottomOf="@+id/tvidn" />

    <TextView
        android:id="@+id/tvcantidadDn"
        android:layout_width="215dp"
        android:layout_height="41dp"

        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvcantidadD"
        app:layout_constraintTop_toBottomOf="@+id/tvproducton" />

    <TextView
        android:id="@+id/tvprecion"
        android:layout_width="215dp"
        android:layout_height="41dp"

        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvprecio"
        app:layout_constraintTop_toBottomOf="@+id/tvcantidadDn" />

    <EditText
        android:id="@+id/etcantidadPn"
        android:layout_width="216dp"
        android:layout_height="41dp"

        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@+id/tvcantidadP"
        app:layout_constraintTop_toBottomOf="@+id/tvprecion" />

    <Button
        android:id="@+id/btnagregar"
        android:layout_width="145dp"
        android:layout_height="52dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="12dp"
        android:text="Agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etcantidadPn" />

    <Button
        android:id="@+id/btncancelar"
        android:layout_width="134dp"
        android:layout_height="53dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Cancelar"
        app:layout_constraintEnd_toStartOf="@+id/btnagregar"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvcantidadP" />
</android.support.constraint.ConstraintLayout>