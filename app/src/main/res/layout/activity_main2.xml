<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jj.proyectosoftware1.Main2Activity"
    android:background="#0F0E0E">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="300dp"
        android:layout_height="480dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="32dp"
        android:background="#0F0E0E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp">



        <Button
            android:id="@+id/btngranos"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:text="@string/Granos"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.505" />

        <Button
            android:id="@+id/btnlacteos"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:text="@string/lacteos"
            android:layout_marginTop="-1dp"
            app:layout_constraintTop_toBottomOf="@+id/btngranos"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.505" />

        <Button
            android:id="@+id/btndulceria"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:text="@string/dulcerias"
            android:layout_marginTop="-2dp"
            app:layout_constraintTop_toBottomOf="@+id/btnlacteos"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.505" />

        <Button
            android:id="@+id/btncarnesfrias"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:text="@string/carnes_frias"
            android:layout_marginTop="-5dp"
            app:layout_constraintTop_toBottomOf="@+id/btndulceria"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.505" />

        <Button
            android:id="@+id/btncacharreria"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:text="@string/cacharreria"
            android:layout_marginTop="-5dp"
            app:layout_constraintTop_toBottomOf="@+id/btncarnesfrias"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.505" />

        <Button
            android:id="@+id/btnmedicamentos"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:text="@string/medicamentos"
            android:layout_marginTop="-5dp"
            app:layout_constraintTop_toBottomOf="@+id/btncacharreria"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.505" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="180dp"
            android:layout_height="85dp"
            android:layout_marginStart="16dp"
            android:text="@string/ingresar_pedidos"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="66dp" />

        <Button
            android:id="@+id/idPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="Pedido"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>
